<Page
    x:Class="BlueBeam.FileTransferPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueBeam"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
            <TextBlock Style="{StaticResource H2Style}" Text="File Transfer" HorizontalAlignment="Center" AutomationProperties.Name="File transfer title" />
            <ProgressBar x:Name="TransferProgress" Width="300" Value="50" AutomationProperties.Name="Transfer progress bar" />
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                <Button x:Name="PauseButton" Content="Pause" Background="{StaticResource WarningBrush}" Click="PauseButton_Click" AutomationProperties.Name="Pause transfer button" TabIndex="0" />
                <Button x:Name="ResumeButton" Content="Resume" Background="{StaticResource SuccessBrush}" Click="ResumeButton_Click" AutomationProperties.Name="Resume transfer button" TabIndex="1" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>