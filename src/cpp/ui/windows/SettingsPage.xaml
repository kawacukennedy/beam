<Page
    x:Class="BlueBeam.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueBeam"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <StackPanel Spacing="16" Margin="16">
            <TextBlock Style="{StaticResource H2Style}" Text="Settings" AutomationProperties.Name="Settings title" />
            <ToggleSwitch x:Name="DarkModeToggle" Header="Dark Mode" AutomationProperties.Name="Dark mode toggle" TabIndex="0" />
            <ToggleSwitch x:Name="NotificationsToggle" Header="Notifications" AutomationProperties.Name="Notifications toggle" TabIndex="1" />
            <Button x:Name="SecurityButton" Content="Security Options" Background="{StaticResource SecondaryBrush}" Click="SecurityButton_Click" AutomationProperties.Name="Security options button" TabIndex="2" />
        </StackPanel>
    </Grid>
</Page>