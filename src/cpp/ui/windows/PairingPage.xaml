<Page
    x:Class="BlueBeam.PairingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueBeam"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="{StaticResource BackgroundLightBrush}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="16">
            <TextBlock Style="{StaticResource H2Style}" Text="Pairing" HorizontalAlignment="Center" AutomationProperties.Name="Pairing title" />
            <TextBlock x:Name="PinDisplay" Style="{StaticResource H1Style}" Text="123456" HorizontalAlignment="Center" AutomationProperties.Name="PIN code display" />
            <Button x:Name="ConfirmButton" Content="Confirm Pairing" Background="{StaticResource SuccessBrush}" HorizontalAlignment="Center" Click="ConfirmButton_Click" AutomationProperties.Name="Confirm pairing button" TabIndex="0" />
        </StackPanel>
    </Grid>
</Page>