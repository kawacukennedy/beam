/* style.qss */
QProgressBar {
    border: 2px solid grey;
    border-radius: 5px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: qlineargradient(x1: 0, y1: 0.5, x2: 1, y2: 0.5, stop: 0 #1E90FF, stop: 1 #00BFFF);
    border-radius: 5px;
    /* Animation for gradient would typically be done in QML or a more advanced stylesheet */
}