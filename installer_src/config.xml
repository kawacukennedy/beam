<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <!-- ================================================================== -->
    <!--                            METADATA                                -->
    <!-- ================================================================== -->
    <Name>BlueConnect Desktop</Name>
    <Version>1.0.0</Version>
    <Publisher>YourCompany Inc.</Publisher>
    <StartMenuDir>BlueConnect</StartMenuDir>
    <TargetDir>@ApplicationsDir@/BlueConnect</TargetDir>
    <Title>BlueConnect Desktop Installer</Title>
    <ProductUrl>https://yourcompany.com/blueconnect</ProductUrl>
    <InstallerApplicationIcon>resources/icons/icon</InstallerApplicationIcon>
    <InstallerWindowIcon>resources/icons/icon</InstallerWindowIcon>
    <Logo>resources/icons/icon.png</Logo>
    <Watermark>resources/branding/splash.png</Watermark>
    <WizardStyle>Modern</WizardStyle>
    <WizardDefaultWidth>640</WizardDefaultWidth>
    <WizardDefaultHeight>480</WizardDefaultHeight>
    <WizardResizable>false</WizardResizable>
    <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
    <AllowSpaceInPath>true</AllowSpaceInPath>
    <ControlScript>control.js</ControlScript>

    <!-- ================================================================== -->
    <!--                         REMOTE REPOSITORIES                        -->
    <!-- ================================================================== -->
    <!-- Used for online installers and maintenance tool to fetch updates -->
    <!-- <RemoteRepositories>
        <Repository>
            <Url>https://yourcompany.com/updates/blueconnect</Url>
            <Enabled>1</Enabled>
            <DisplayName>BlueConnect Desktop Repository</DisplayName>
        </Repository>
    </RemoteRepositories> -->

    <!-- ================================================================== -->
    <!--                             COMPONENTS                             -->
    <!-- ================================================================== -->
    <Components>
        <Component>
            <Name>Application</Name>
            <DisplayName>BlueConnect Desktop Application</DisplayName>
            <Description>The core application files.</Description>
            <Version>1.0.0</Version>
            <ForcedInstallation>true</ForcedInstallation>
            <Script>installscript.qs</Script>
        </Component>
        <Component>
            <Name>AutoStart</Name>
            <DisplayName>Auto-start Bluetooth Service</DisplayName>
            <Description>Enable background service on startup.</Description>
            <Version>1.0.0</Version>
            <Script>installscript.qs</Script>
            <Selected>true</Selected>
        </Component>
        <Component>
            <Name>StartMenu</Name>
            <DisplayName>Start Menu Shortcut</DisplayName>
            <Description>Add application to the Start Menu or equivalent.</Description>
            <Version>1.0.0</Version>
            <Script>installscript.qs</Script>
            <Selected>false</Selected>
        </Component>
        <Component>
            <Name>DesktopShortcut</Name>
            <DisplayName>Desktop Shortcut</DisplayName>
            <Description>Create a desktop icon for the application.</Description>
            <Version>1.0.0</Version>
            <Script>installscript.qs</Script>
            <Selected>false</Selected>
        </Component>
    </Components>

    <!-- ================================================================== -->
    <!--                         TRANSLATIONS                               -->
    <!-- ================================================================== -->
    <Translations>
        <Translation>en</Translation>
        <Translation>fr</Translation>
        <Translation>de</Translation>
        <Translation>es</Translation>
        <Translation>zh</Translation>
        <Translation>ar</Translation>
        <Translation>ru</Translation>
        <Translation>pt</Translation>
        <Translation>ja</Translation>
        <Translation>ko</Translation>
    </Translations>
</Installer>
